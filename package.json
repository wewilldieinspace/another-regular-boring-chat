  "scripts": {
    "start": "concurrently \"yarn client:start\" \"yarn server:start\"",
    "client:start": "yarn --cwd client start",
    "server:start": "yarn --cwd server start",
    "start:dev": "concurrently \"yarn client:dev\" \"yarn server:dev\"",
    "client:dev": "yarn --cwd client start:dev",
    "server:dev": "yarn --cwd server start:dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
